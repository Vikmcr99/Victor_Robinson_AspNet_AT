@model IEnumerable<Victor_Robinson_AspNet_AT.Models.Aniversariante>

@{
    ViewData["Title"] = "Index";
}


<h5>Pesquisar aniversariante</h5>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Nome: <input type="text" name="pesquisa" value="@ViewData["FiltoPesquisa"]" />
            <input type="submit" value="Pesquisa" class="btn btn-dark" />
        </p>
    </div>
</form>


<p>
    <a asp-action="Create">Adicionar</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                <a asp-action="Index" asp-route-ordena="@ViewData["OrdemNascimento"]">@Html.DisplayNameFor(model => model.Nascimento)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


<h4>Aniversariantes do Dia</h4>

<p>
    <a class="btn btn-dark" asp-area="" asp-controller="Aniversariante" asp-action="AniversarioDoDia">Ver</a>
</p>